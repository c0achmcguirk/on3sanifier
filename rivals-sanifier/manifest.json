{
  "manifest_version": 3,
  "name": "Rivals Sanifier",
  "version": "1.0",
  "description": "Filters posts and threads on rivals.com.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.rivals.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "action": {
    "default_popup": "public/popup.html"
  }
}
