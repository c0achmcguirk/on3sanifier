{
  "manifest_version": 3,
  "name": "on3 Sanifier",
  "version": "1.0.0",
  "description": "Filters posts and threads on on3.com.",
  "icons": {
    "16": "o3s_logo_16.png",
    "48": "o3s_logo_48.png",
    "128": "o3s_logo_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "o3s_logo_16.png",
      "48": "o3s_logo_48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.on3.com/*"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "site-style.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "commands": {
    "toggle-hidden": {
      "suggested_key": {
        "default": "Alt+Up",
        "mac": "Alt+Up"
      },
      "description": "Toggle visibility of hidden posts/threads."
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "*.html",
        "*.css",
        "js/*.js",
        "images/*.png",
        "o3s_logo_128.png",
        "o3s_logo_48.png",
        "o3s_logo_16.png"
      ],
      "matches": [
        "*://*.on3.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self' https://fonts.gstatic.com; style-src 'self' https://fonts.googleapis.com;"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "on3-sanifier@example.com",
      "background": {
        "scripts": [
          "js/background.js"
        ]
      }
    }
  }
}
